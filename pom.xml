    <groupId>com.nokia.jenkins</groupId>
    <artifactId>p4-plugin</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>hpi</packaging>
    <name>Build page information setter plugin</name>
    <url>https://source.nokia.com/projects/965-njen-nwwp/wiki/pages/NJen_build_page_info_plugin</url>

    <scm>
        <connection>scm:hg:https://source.nokia.com/njen-nwwp/hg/build-page-info</connection>
        <developerConnection>scm:hg:https://source.nokia.com/njen-nwwp/hg/build-page-info</developerConnection>
