    <properties>
        <!-- removed warning about the character set that makes the build platform dependent -->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <repository>
            <!-- NJen NwWP Maven repository -->
            <id>NJen-NwWP</id>
            <url>http://njen-nwwp.europe.nokia.com/maven/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <!-- NJen NwWP Maven snapshot repository -->
            <id>NJen-NwWP-snapshot</id>
            <url>http://njen-nwwp.europe.nokia.com/maven-snapshot/</url>
        </repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>com.perforce</groupId>
            <artifactId>p4java</artifactId>
            <version>[2011.1.297684,)</version>
        </dependency>
    </dependencies>
